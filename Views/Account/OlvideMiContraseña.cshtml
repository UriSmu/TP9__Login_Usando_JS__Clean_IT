@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="auth-container">
    <h2>Recuperar Contraseña</h2>

    <form action='@Url.ActionLink("OlvideMiContraseña", "Account")' method="post">
        <label for="inicio">Nombre de usuario o Email:</label>
        <input type="text" id="inicio" name="inicio" class="input-field" required />

        <button type="submit" class="btn-primary">Enviar</button>
    </form>

    @if (ViewBag.MensajeError != null)
    {
        <p class="error-message">@ViewBag.MensajeError</p>
    }
</div>