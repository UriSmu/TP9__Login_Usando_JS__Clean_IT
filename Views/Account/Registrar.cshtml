@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="auth-container">
<h2>Registro de Usuario</h2>

<form action='@Url.ActionLink("Registrar", "Account")' method="post" id="registroForm">
    <label>Nombre de usuario:</label>
    <input type="text" name="username" placeholder="Username" required>

    <label>Nombre:</label>
    <input type="text" name="nombre" placeholder="Nombre" required>

    <label>Apellido:</label>
    <input type="text" name="apellido" placeholder="Apellido" required>

    <label>Email:</label>
    <input type="email" name="email" placeholder="Email" required>

    <label>Teléfono:</label>
    <input type="text" name="telefono" placeholder="Teléfono" required>

    <label>Documento:</label>
    <input type="text" name="documento" placeholder="Documento" required>

    <label>Contraseña:</label>
    <input type="password" name="contraseña" placeholder="Contraseña" required>

    <label>Confirmar Contraseña:</label>
    <input type="password" name="confirmarContraseña" placeholder="Confirmar Contraseña" required>

    <label>Pregunta de Seguridad:</label>
    <select name="idPregunta" required>
        <option value="">Selecciona una pregunta</option>
        @foreach (PreguntaSeguridad pregunta in ViewBag.PreguntasSeguridad)
        {
            <option value="@pregunta.IdPregunta">@pregunta.Texto_Pregunta</option>
        }
    </select>

    <label>Respuesta a la Pregunta de Seguridad:</label>
    <input type="text" name="respuestaSeguridad" placeholder="Respuesta de seguridad" required>

    <button type="submit">Registrar</button>
</form>
<a class="secondary-link" href='@Url.Action("IniciarSesion", "Account")'>¿Ya tienes una cuenta? Iniciar sesión</a>


    @if (ViewBag.MensajeExito != null)
    {
        <p>@ViewBag.MensajeExito</p>
    }

    @if (ViewBag.MensajeError != null)
    {
        <p>@ViewBag.MensajeError</p>
    }
</div>

<script src="~/js/site.js"></script>